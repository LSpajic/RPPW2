<%- include('partials/header') %>
<link rel="stylesheet" href="/styles/style_cart.css">

<div class="cart-container">
    <table class="cart-table">
        <thead>
            <tr>
                <th>NAZIV PROIZVODA</th>
                <th>KOLIČINA</th>
            </tr>
        </thead>
        <tbody id="cart-items">
            <% if (cartItems.length === 0) { %>
                <tr>
                    <td colspan="2" style="text-align: center;">Vaša košarica je prazna</td>
                </tr>
            <% } else { %>
                <% cartItems.forEach(item => { %>
                    <tr data-name="<%= item.name %>">
                        <td><%= item.name %></td>
                        <td>
                            <div class="quantity-controls">
                                <button class="quantity-btn remove-btn" data-name="<%= item.name %>">–</button>
                                <span class="quantity-value"><%= item.quantity %></span>
                                <button class="quantity-btn add-btn" data-name="<%= item.name %>">+</button>
                            </div>
                        </td>
                    </tr>
                <% }) %>
            <% } %>
        </tbody>
    </table>
</div>

<script src="/scripts/cart.js"></script>


<%- include('partials/footer') %>
